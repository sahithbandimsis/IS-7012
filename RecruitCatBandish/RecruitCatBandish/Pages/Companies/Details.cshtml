@page
@model RecruitCatBandish.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details Page for Companies</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.EmployeeCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.EmployeeCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Candidates Associated with this Company</h4>
    <hr />
    @if (Model.Candidates.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Job Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var candidate in Model.Candidates)
                {
                    <tr>
                        <td>@candidate.FirstName</td>
                        <td>@candidate.LastName</td>
                        <td>@candidate.Email</td>
                        <td>@candidate.PhoneNumber</td>
                        <td>@candidate.JobTitle.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No candidates are associated with this company.</p>
    }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
