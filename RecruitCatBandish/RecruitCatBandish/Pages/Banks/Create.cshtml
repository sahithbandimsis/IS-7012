@page
@model RecruitCatBandish.Pages.Banks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create bank account</h1>

<h4>Bank Account creation page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankAccount.CurrentBalance" class="control-label"></label>
                <input asp-for="BankAccount.CurrentBalance" class="form-control" />
                <span asp-validation-for="BankAccount.CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountName" class="control-label"></label>
                <input asp-for="BankAccount.AccountName" class="form-control" />
                <span asp-validation-for="BankAccount.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountType" class="control-label"></label>
                <input asp-for="BankAccount.AccountType" class="form-control" />
                <span asp-validation-for="BankAccount.AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountHolderId" class="control-label"></label>
                <select asp-for="BankAccount.AccountHolderId" class ="form-control" asp-items="ViewBag.AccountHolderId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
