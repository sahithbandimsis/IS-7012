<!-- Background color for the body -->
<style>
    body {
        background-color: #f5f5f5; /* Light grey background */
    }

    .team-section {
        padding: 50px 0;
    }

    .team-member {
        background-color: #ffffff; /* White card background */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .team-member img {
            border-radius: 50%;
            margin-bottom: 15px;
        }

        .team-member h3 {
            font-size: 24px;
            font-weight: bold;
            color: #007bff; /* Blue color for names */
        }

        .team-member p {
            color: #555; /* Grey color for text */
        }

        .team-member a {
            color: #007bff; /* Blue color for LinkedIn links */
            text-decoration: none;
        }

            .team-member a:hover {
                text-decoration: underline;
            }

    .jumbotron {
        background-color: #007bff; /* Blue background for jumbotron */
        color: #ffffff; /* White text color */
    }

        .jumbotron p {
            color: #e0e0e0; /* Light grey text color for subtitle */
        }

    .row.mt-5 h2 {
        color: #28a745; /* Green color for headings */
    }

    .row.mt-5 p {
        color: #343a40; /* Dark grey color for contact details */
    }
</style>

